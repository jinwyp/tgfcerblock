{
  "verbose": true,
  "restartable": "rs",
  "ignore": [
    "bin",
    "node_modules",
    "testing",
    "public",
    "views",
    "logs"
  ],
  "env": {
    "NODE_ENV": "production",
    "DEBUG" : "koa2-user:*"
  },
  "ext": "js json",
  "execMap": {
    "js": "node",
    "rb": "ruby",
    "pde": "processing --sketch={{pwd}} --run"
  }
}
